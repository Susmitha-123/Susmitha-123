class icecream_menu:
   
    def init(self,ttype,flavor):
        self.ttype=ttype
        self.flavor=flavor
    def display(self):
        print(self.ttype,self.flavor)
   
class icecreamtype:
    amt=0
    def init(self,icetype):
        self.icetype=icetype
        print("Icecream type is : "+self.icetype)
        if(self.icetype=='stick'):
            self.amt=10
            #return amt
        elif(self.icetype=='cone'):
            self.amt=20
            #return amt
        elif(self.icetype=='cup'):
            self.amt=30
            #return amt
       
class icecreamflavor:
    #amt1=0
    def init(self,iceflavor):
        self.iceflavor=iceflavor
        print("Icecream flavor is : "+self.iceflavor)
        if(self.iceflavor=="venilla"):
            self.amt1=10
            #return amt1
        elif(self.iceflavor=="chocolate"):
            self.amt1=20
            #return amt1
        elif(self.iceflavor=="strawberry"):
            self.amt1=30
            #return amt1
       
